<?xml version="1.0" encoding="utf-8"?>
<recipe name="Waffles" lang="de">
	<ingredients>
		<dough name="Teig">
			<ingredient name="egg" count="4" />
			<ingredient name="flour" count="100" unit="g" />
			<ingredient name="starch" count="100" unit="g" />
			<ingredient name="butter" count="175" unit="g" />
			<ingredient name="sugar" count="125" unit="g" />
			<ingredient name="yogurt" count="100" unit="g" />
			<ingredient name="rum" count="4" unit="cl" />
			<ingredient name="bakingpowder" count="1/2" unit="teasp" />
			<ingredient name="salt" count="1" unit="pinch" />
		</dough>
	</ingredients>
	<serves>
		<option value="persons" count="3" />
		<option value="waffles" count="10" />
	</serves>
	<preparation>
		<step>
			<i>butter</i> in der Mikrowelle schmelzen.
		</step>
		<step>
			<i>butter</i>, <i>egg</i>, <i>flour</i>, <i>starch</i>, <i>yogurt</i>, <i>rum</i>, <i>bakingpowder</i> und <i>salt</i> zu einem Teig vermischen und damit die Waffeln zubereiten.
		</step>
	</preparation>
</recipe>
