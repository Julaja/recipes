<?xml version="1.0" encoding="utf-8"?>
<recipe name="Nudelsalat" lang="de">
	<ingredients>
		<salad name="Salat">
			<ingredient name="pasta/spiral" count="500" unit="g" />
			<ingredient name="egg" count="4" />			
			<ingredient name="apple" count="2" />
			<ingredient name="tomato" count="5" />
			<ingredient name="pickles" count="1" unit="jar" />
			<ingredient name="baloney" count="250" unit="g" />
		</salad>
		<dressing name="Dressing">
			<ingredient name="yogurt" count="500" unit="ml" />
			<ingredient name="mayonnaise" count="1" unit="tblsp" />
			<ingredient name="lemon/juice" count="1" unit="pinch" />
			<ingredient name="pepper" />
			<ingredient name="salt" />
			<ingredient name="paprika/sweet" />
		</dressing>
	</ingredients>
	<preparation>
		<step>
			<i>pasta/spiral</i> kochen, aber etwas härter als al dente. <i>egg</i> hart kochen und in Scheiben schneiden.
		</step>
		<step>
			Zutaten schnibbeln und verrühren. Dressing anrühren, gut würzen, abschmecken und dann darüber geben.
		</step>
	</preparation>
</recipe>
