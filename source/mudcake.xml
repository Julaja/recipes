<?xml version="1.0" encoding="utf-8"?>
<recipe name="Mudcake" lang="de">
	<ingredients>
		<dough name="Teig">
			<ingredient name="butter" count="500" unit="g" />
			<ingredient name="chocolate/bswt" count="300" unit="g" />
			<ingredient name="chocolate/wmilk" count="200" unit="g" />
			<ingredient name="sugar/brown" count="400" unit="g" />
			<ingredient name="sugar/vanilla" count="8" unit="g" />
			<ingredient name="water" count="330" unit="ml" />
			<ingredient name="egg/l" count="4" />
			<ingredient name="flour" count="360" unit="g" />
			<ingredient name="cacao" count="60" unit="g" />
			<ingredient name="bakingpowder" count="2" unit="teasp" />
		</dough>
	</ingredients>
	<serves>
		<option value="springform-28cm" count="1" />
		<option value="springform-18cm" count="2.5" />
	</serves>

	<preparation>
		<step>
			<i>butter</i>, <i>chocolate/bswt</i>, <i>chocolate/wmilk</i>, <i>sugar/brown</i>, <i>sugar/vanilla</i> und das <i>water</i> zusammen in einen großen Topf geben und aufschmelzen. Dann die restlichen Zutaten zugeben. Die flüssige Teigmasse in eine Springform geben und bei <temp>170°C</temp> etwa <time>60 Minuten</time> backen.
		</step>
	</preparation>
</recipe>
