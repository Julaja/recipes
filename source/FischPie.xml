<?xml version="1.0" encoding="utf-8"?>
<recipe name="FischPie" lang="de">
	<ingredients>
		<pie name="Auflauf">
			<ingredient name="potato" count="1" unit="kg" />
			<ingredient name="carrot" count="1" />			
			<ingredient name="cheddar" count="150" unit="g" />
			<ingredient name="salmon" count="300" unit="g" />
			<ingredient name="haddock" count="300" unit="g" />
			<ingredient name="olive/oil" />
		</pie>
	</ingredients>
	<preparation>
		<step>
			<i>pasta/spiral</i> kochen, aber etwas härter als al dente. <i>egg</i> hart kochen und in Scheiben schneiden.
		</step>
		<step>
			Zutaten schnibbeln und verrühren. Dressing anrühren, gut würzen, abschmecken und dann darüber geben.
		</step>
	</preparation>
</recipe>
